# роутинг по рекам - невидимая линия на 0-м слое (спасибо maptourist.org)
waterway=canal | waterway=river |
waterway=rapid | waterway=rapids | whitewater=rapid | whitewater=rapids |
waterway=drain | waterway=stream {add access = no; add foot = yes; add bicycle = no} [0x0e road_class=0 road_speed=0 resolution 24]

