minor_service=yes [0x07 road_class=0 road_speed=1 resolution 24]

highway=service & (bridge=yes|tunnel=yes|oneway=yes|mkgmap:unpaved=1) [0x0f road_class=0 road_speed=2 resolution 24 continue]
